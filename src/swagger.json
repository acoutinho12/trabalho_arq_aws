    "paths": {
        "/times": {
            "post": {
                "summary": "Cadastro de time",
                "description": "Rota responsável pelo cadastro de um novo time",
                "tags": [
                    "Times"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/TimeRequestBody"
                            }
                        }
                    }
                }
            }
        },
        "/times/{id}": {
            "get": {
                "summary": "Buscar time",
                "description": "Rota responsável pela busca de um time pelo id",
                "tags": [
                    "Times"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "id do time para busca",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Time encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#components/schemas/Time"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Time não encontrado pelo id"
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            },
            "put": {
                "summary": "Atualizar time",
                "description": "Rota responsável por atualizar os dados de um time pelo id",
                "tags": [
                    "Times"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/Time"
                            }
                        }
                    }
                },
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "id do time para atualizar",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Time encontrado e atualizado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#components/schemas/Time"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Time não encontrado pelo id"
                    },
                    "500": {
                        "description": "Erro interno do servidor."
                    }
                }
            },
            "delete": {
                "summary": "Apagar time",
                "description": "Rota responsável por apagar um time pelo id",
                "tags": [
                    "Times"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "id do time para apagar",
                        "required": true
                    }
